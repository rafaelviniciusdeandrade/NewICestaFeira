@using CestaFeira.Web.Models.Produto
@model IEnumerable<ProdutoModel>

@{
    Layout = null;
}

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Página Principal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="#!">CestaFeira</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown">Menu</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="~/Produto/Produtos">Todos os Produtos</a></li>

                            @if (User.IsInRole("ADM") || User.IsInRole("PROD"))
                            {
                                <li><a class="dropdown-item" href="~/Produto/CadastrarProdutos">Cadastrar Produtos</a></li>
                                <li><a class="dropdown-item" href="~/Produto/GerenciarProdutos">Gerenciar Produtos</a></li>
                                <li><a class="dropdown-item" href="~/Pedido/GerenciarPedidos">Gerenciar Pedidos</a></li>
                            }
                            <li><a class="dropdown-item" href="~/Pedido/Pedidos">Ver Pedidos</a></li>
                            <li><a class="dropdown-item" href="~/Usuario/Sair">Sair</a></li>

                        </ul>
                    </li>
                </ul>
                <form class="d-flex" id="carrinhoForm" onsubmit="return false;">
                    <button class="btn btn-outline-dark" type="button" id="carrinhoBtn" data-bs-toggle="modal" data-bs-target="#carrinhoModal">
                        <i class="bi-cart-fill me-1"></i>
                        Carrinho
                        <span class="badge bg-dark text-white ms-1 rounded-pill" id="quantidadeCarrinho">0</span>
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Produtos</h1>
                <p class="lead fw-normal text-white-50 mb-0">Produtos de qualidade para sua casa</p>
            </div>
        </div>
    </header>
   
    <div class="container my-4">
        <label for="produtorFilter" class="form-label">Filtrar por Produtor:</label>
        <select class="form-select" id="produtorFilter" onchange="filtrarPorProdutor()">
            <option value="">Todos os Produtores</option>
            @if (Model != null)
            {
                @foreach (var produtor in Model.Select(p => p.Usuario?.NomeFantasia).Distinct())
                {
                    <option value="@produtor">@produtor</option>
                }
            }

        </select>
    </div>
    @if (Model != null && Model.Any())
    {
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    @foreach (var produto in Model)
                    {
                        var imagemBase64 = produto.imagem != null ? Convert.ToBase64String(produto.imagem) : null;
                        var imagemSrc = !string.IsNullOrEmpty(imagemBase64) ? $"data:image/png;base64,{imagemBase64}" : "caminho/padrao/para/imagem.png";

                        <div class="col mb-5 produto-item" data-produtor="@produto.Usuario.NomeFantasia">
                            <div class="card h-100">
                                <img class="card-img-top" src="@imagemSrc" alt="Imagem do Produto: @produto.Nome" />
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <h5 class="fw-bolder">@produto.Nome</h5>
                                        @produto.Descricao
                                        R$ @produto.valorUnitario.ToString("F2")
                                    </div>
                                </div>
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center">
                                        <input type="number" id="quantidade_@produto.Id" min="1" value="1" class="form-control mb-2" style="width: 80px; margin: 0 auto;" />
                                        <button type="button" class="btn btn-outline-dark mt-auto" data-id="@produto.Id" data-produtor-id="@produto.Usuario.Id" onclick="adicionarAoCarrinho(this)">Adicionar ao carrinho</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </section>
    }
    else
    {
        <p class="text-center">Nenhum produto disponível.</p>
    }

    <div class="modal fade" id="carrinhoModal" tabindex="-1" aria-labelledby="carrinhoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="carrinhoModalLabel">Carrinho de Compras</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <ul id="listaItensCarrinho" class="list-group mb-3">
                    </ul>
                    <div class="mt-3">
                        <h5 id="totalCarrinho">Total: R$ 0,00</h5>
                    </div>

                    <hr />
                    <h6>Selecione a Forma de Pagamento:</h6>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="metodoPagamento" id="pagamentoPix" value="Pix" checked onchange="togglePixArea(this.value)">
                        <label class="form-check-label" for="pagamentoPix">
                            **Pix** (Pagamento Imediato - Gera QR Code)
                        </label>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="metodoPagamento" id="pagamentoEntrega" value="NaEntrega" onchange="togglePixArea(this.value)">
                        <label class="form-check-label" for="pagamentoEntrega">
                            **Na Entrega**
                        </label>
                    </div>

                    <div id="pixArea" style="display: block; border: 1px dashed #ccc; padding: 10px; text-align: center;">
                        <p class="text-muted">Clique em **Finalizar Compra** para gerar o QR Code Pix.</p>
                        <div id="qrcodeDisplay">
                        </div>
                        <p id="pixCodeDisplay" class="mt-2" style="font-size: 0.9em; word-break: break-all;"></p>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-success" id="btnFinalizar" onclick="iniciarFinalizacao()">Finalizar Compra</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="py-5 bg-dark"></footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        let dadosParaConfirmacao = {};
        let metodoPagamentoSelecionado = 'Pix';

        function togglePixArea(metodo) {
            metodoPagamentoSelecionado = metodo;
            if (metodo === 'Pix') {
                $('#pixArea').show();
                $('#qrcodeDisplay').html('');
                $('#pixCodeDisplay').text('');
                $('#btnFinalizar').text('Gerar Pix e Finalizar');
            } else {
                $('#pixArea').hide();
                $('#btnFinalizar').text('Finalizar Compra');
            }
        }

        $('#carrinhoModal').on('show.bs.modal', function () {
            metodoPagamentoSelecionado = $('input[name="metodoPagamento"]:checked').val();
            togglePixArea(metodoPagamentoSelecionado);

            $.ajax({
                url: '/Pedido/ObterItensCarrinho',
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        var lista = $('#listaItensCarrinho');
                        lista.empty();

                        response.itens.forEach(function (item) {
                            lista.append(
                                '<li class="list-group-item" data-produto-id="' + item.ProdutoId + '">'
                                + item.Nome + ' - Quantidade: <span class="quantidade">' + item.Quantidade
                                + '</span> - R$ ' + item.ValorUnitario.toFixed(2) + '</li>'
                            );
                        });

                        $('#totalCarrinho').text('Total: R$ ' + response.total.toFixed(2));
                    } else {
                        $('#listaItensCarrinho').html('<li class="list-group-item">Carrinho vazio.</li>');
                        $('#totalCarrinho').text('Total: R$ 0,00');
                    }
                },
                error: function () {
                    console.log("Erro ao obter os itens do carrinho.");
                }
            });
        });

        function iniciarFinalizacao() {
            var totalCarrinhoText = document.getElementById("totalCarrinho").innerText;
            var totalCarrinho = parseFloat(
                totalCarrinhoText.replace("Total: R$", "").replace(",", ".").trim()
            );

            if (totalCarrinho <= 0) {
                alert("O carrinho está vazio.");
                return;
            }

            if (metodoPagamentoSelecionado === 'Pix') {
                gerarPixEFinalizar(totalCarrinho);
            } else if (metodoPagamentoSelecionado === 'NaEntrega') {
                finalizarCompra('NaEntrega', null);
            }
        }
                function gerarPixEFinalizar(valorTotal) {
            $('#btnFinalizar').prop('disabled', true).text('Gerando Pix...');

            $.ajax({
                url: '/Pedido/GerarPix',
                type: 'POST',
                contentType: 'application/json',
                dataType: 'json',
                data: JSON.stringify({
                    valorTotal: valorTotal
                }),
                success: function (response) {
                    $('#btnFinalizar').prop('disabled', false);

                    const isSuccess = response.Success || response.success;
                    const qrCodeData = response.QrCodeBase64 || response.qrCodeBase64;
                    const pixCode = response.PixCode || response.pixCode;

                    if (isSuccess && qrCodeData) {
                        $('#qrcodeDisplay').html(
                            '<img src="data:image/png;base64,' + qrCodeData +
                            '" alt="QR Code Pix" style="width: 200px; height: 200px;" />'
                        );
                        $('#pixCodeDisplay').html('**Código Copia e Cola:**<br>' + pixCode);

                        finalizarCompra('Pix', pixCode)
                            .then(() => {
                                alert("Pedido salvo com sucesso! Escaneie o QR Code ou use o Código Copia e Cola para pagar.");

                                $('#listaItensCarrinho').empty().append('<li class="list-group-item">Carrinho vazio.</li>');
                                $('#totalCarrinho').text('Total: R$ 0,00');
                                $('#quantidadeCarrinho').text('0');

                                metodoPagamentoSelecionado = 'Pix';
                                $('#pagamentoEntrega').prop('disabled', true);

                                $('#btnFinalizar').text('Ver Pedido e Sair');
                                $('#btnFinalizar').off('click');
                                $('#btnFinalizar')[0].onclick = null;
                                $('#btnFinalizar').on('click', function () {
                                    window.location.href = '/Pedido/Pedidos';
                                });

                                $('#pixArea p.text-muted').remove();
                            })
                            .catch(error => {
                                console.error("Erro ao salvar pedido:", error);
                                alert("Erro ao salvar pedido: " + error.message);
                                $('#btnFinalizar').text('Erro ao Salvar Pedido');
                            });

                    } else {
                        let msg = response.Message || response.message || "Erro desconhecido";
                        alert("Erro ao gerar Pix: " + msg);
                        $('#btnFinalizar').text('Finalizar Compra');
                    }
                },
                error: function (xhr, status, error) {
                    $('#btnFinalizar').prop('disabled', false).text('Finalizar Compra');
                    alert("Erro na requisição ao servidor.");
                }
            });
        }


        function finalizarCompra(metodoPagamento, pixCode) {
            return new Promise((resolve, reject) => {
                var itensCarrinho = [];

                document.querySelectorAll("#listaItensCarrinho li").forEach(function (item) {
                    var produtoId = item.getAttribute("data-produto-id");
                    var nomeProduto = item.innerText.split(' - ')[0];
                    var quantidade = item.querySelector('.quantidade').innerText;

                    itensCarrinho.push({
                        Id: produtoId,
                        Nome: nomeProduto,
                        Quantidade: quantidade
                    });
                });

                var totalCarrinho = document
                    .getElementById("totalCarrinho")
                    .innerText.replace("Total: R$", "").trim();

                fetch('/Pedido/FinalizarCompra', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        Produtos: itensCarrinho,
                        ValorTotal: totalCarrinho,
                        MetodoPagamento: metodoPagamento,
                        PixCode: pixCode
                    })
                })
                    .then(response => {
                        if (response.ok) {
                            if (metodoPagamento === 'NaEntrega') {
                                alert('Pedido finalizado com sucesso!');
                                window.location.href = '/Pedido/Pedidos';
                            }
                            resolve();
                        } else {
                            response.json().then(data => {
                                reject(new Error(data.message || 'Erro desconhecido.'));
                            });
                        }
                    })
                    .catch(error => {
                        reject(new Error('Erro ao finalizar a compra.'));
                    });
            });
        }

        function adicionarAoCarrinho(button) {
            var $button = $(button);

            var produtoId = $button.data('id');
            var quantidade = $('#quantidade_' + produtoId).val();

            if (!produtoId || !quantidade || quantidade <= 0) {
                alert("Erro: quantidade inválida.");
                return;
            }

            $.ajax({
                url: '/Pedido/AdicionarProdutoAoCarrinho',
                type: 'POST',
                data: {
                    produtoId: produtoId,
                    quantidade: quantidade
                },
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                        atualizarCarrinho();
                    }
                    else if (response.requiresConfirmation) {
                        dadosParaConfirmacao = {
                            produtoId: response.novoProdutoId || produtoId,
                            quantidade: response.novaQuantidade || quantidade
                        };

                        if (confirm(response.message)) {
                            esvaziarECadicionar(
                                dadosParaConfirmacao.produtoId,
                                dadosParaConfirmacao.quantidade
                            );
                        }
                    }
                    else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Erro ao adicionar ao carrinho.");
                }
            });
        }

        function esvaziarECadicionar(produtoId, quantidade) {
            $.ajax({
                url: '/Pedido/EsvaziarECadicionar',
                type: 'POST',
                data: {
                    produtoId: produtoId,
                    quantidade: quantidade
                },
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                        $('#quantidadeCarrinho').text(response.quantidadeItens);
                    } else {
                        alert("Erro ao trocar produtor no carrinho.");
                    }
                }
            });
        }

        function atualizarCarrinho() {
            $.ajax({
                url: '/Pedido/ObterQuantidadeItensCarrinho',
                type: 'GET',
                success: function (response) {
                    if (response.success !== false) {
                        var quantidade =
                            response.quantidadeItens ??
                            response.quantidade ??
                            response.totalItens ??
                            0;
                        $('#quantidadeCarrinho').text(quantidade);
                    }
                }
            });
        }

        function filtrarPorProdutor() {
            var selecionado = document.getElementById("produtorFilter").value.trim().toLowerCase();
            var produtos = document.querySelectorAll(".produto-item");

            produtos.forEach(function (produto) {
                var nomeProdutor = produto.getAttribute("data-produtor").toLowerCase();

                produto.style.display =
                    selecionado === "" || nomeProdutor.includes(selecionado)
                        ? "block"
                        : "none";
            });
        }

        $(document).ready(function () {
            atualizarCarrinho();
        });
    </script>


</body>

</html>
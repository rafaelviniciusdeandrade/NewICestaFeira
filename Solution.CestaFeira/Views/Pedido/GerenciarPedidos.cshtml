@using CestaFeira.Web.Models.Pedido
@model IEnumerable<PedidoProdutoRetModel>

@{
    Layout = null;
}

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Página Principal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="#!">CestaFeira</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown">Menu</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="~/Produto/Produtos">Todos os Produtos</a></li>

                            @if (User.IsInRole("ADM") || User.IsInRole("PROD"))
                            {
                                <li><a class="dropdown-item" href="~/Produto/CadastrarProdutos">Cadastrar Produtos</a></li>
                                <li><a class="dropdown-item" href="~/Produto/GerenciarProdutos">Gerenciar Produtos</a></li>
                                <li><a class="dropdown-item" href="~/Pedido/GerenciarPedidos">Gerenciar Pedidos</a></li>
                            }
                            <li><a class="dropdown-item" href="~/Pedido/Pedidos">Ver Pedidos</a></li>
                            <li><a class="dropdown-item" href="~/Usuario/Sair">Sair</a></li>

                        </ul>
                    </li>
                </ul>
                <form class="d-flex" id="carrinhoForm" onsubmit="return false;">
                    <button class="btn btn-outline-dark" type="button" id="carrinhoBtn" data-bs-toggle="modal" data-bs-target="#carrinhoModal">
                        <i class="bi-cart-fill me-1"></i>
                        Carrinho
                        <span class="badge bg-dark text-white ms-1 rounded-pill" id="quantidadeCarrinho">0</span>
                    </button>
                </form>
            </div>
        </div>
    </nav>
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Produtos</h1>
                <p class="lead fw-normal text-white-50 mb-0">Pedidos</p>
            </div>
        </div>
    </header>

    <div class="container my-5">
        <h1>Pedidos:</h1>
        @if (Model != null && Model.Any())
        {
            @foreach (var pedido in Model)
            {
                <div class="pedido-container border rounded p-4 mb-4">
                    <h5 class="fw-bold">Pedido de: @pedido.Usuario.Nome</h5>
                    <p>Data: @pedido.Data</p>
                    <p>Status: <b>@pedido.Status</b></p>

                    <div class="produtos-container">
                        <h6>Produtos:</h6>
                        @foreach (var produto in pedido.PedidoProdutos)
                        {
                            <div class="produto-item border p-3 my-2 rounded">
                                <p><b>Produto:</b> @produto.Produto.Nome</p>
                                <p><b>Quantidade:</b> @produto.Quantidade</p>
                                <p><b>Valor Unitário:</b> @string.Format("{0:C}", produto.Produto.valorUnitario)</p>
                                <p><b>Subtotal:</b> @string.Format("{0:C}", produto.Quantidade * produto.Produto.valorUnitario)</p>
                            </div>
                        }
                    </div>

                    <div class="pedido-footer mt-4 d-flex justify-content-between align-items-center">
                        <p class="fw-bold m-0">Valor Total do Pedido: @string.Format("{0:C}", pedido.PedidoProdutos.Sum(p => p.Quantidade * p.Produto.valorUnitario))</p>

                        @if (pedido.Status == "Aberto")
                        {
                            <div class="btn-group">
                                <form action="~/Pedido/AceitarPedido" method="post" style="display: inline; margin-right: 8px;">
                                    <input type="hidden" name="pedidoId" value="@pedido.IdPedido" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check-lg"></i> Aceitar
                                    </button>
                                </form>

                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#recusaModal_@pedido.IdPedido">
                                    <i class="bi bi-x-lg"></i> Recusar
                                </button>
                            </div>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Status: @pedido.Status</span>
                        }
                    </div>
                </div>

                <div class="modal fade" id="recusaModal_@pedido.IdPedido" tabindex="-1" aria-labelledby="recusaModalLabel_@pedido.IdPedido" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form action="~/Pedido/RecusarPedido" method="post">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="recusaModalLabel_@pedido.IdPedido">Recusar Pedido #@pedido.IdPedido.ToString().Substring(0, 8)...</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" name="pedidoId" value="@pedido.IdPedido" />
                                    <div class="mb-3">
                                        <label for="notaRecusa_@pedido.IdPedido" class="form-label">Motivo da Recusa:</label>
                                        <textarea class="form-control" id="notaRecusa_@pedido.IdPedido" name="notaRecusa" rows="3" required></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-danger">Confirmar Recusa</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }

        }
        else
        {
            <div class="alert alert-warning text-center">Nenhum pedido encontrado.</div>
        }
    </div>

    <footer class="py-5 bg-dark"></footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>